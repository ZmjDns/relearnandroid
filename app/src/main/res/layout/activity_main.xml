<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view位置大小"
            android:onClick="jumpPage">

        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XFermode"
            android:onClick="xFermode"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textMeasure"
            android:onClick="textMeasure"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="clipAndTrans"
            android:onClick="clipAndTrans"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="animate"
            android:onClick="animate"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="drawableBitmap"
            android:onClick="drawableBitmap"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="materialText"
            android:onClick="materialText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="约束布局"
            android:onClick="constraintLayout"/>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>